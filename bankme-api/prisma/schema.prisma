datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = "linux-musl-openssl-3.0.x"
}

model User {
  id    String    @id @default(uuid())
  login  String
  password String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")
  @@map("users")
}

model Assignor {
  id    String    @id @default(uuid())
  document  String
  email String
  phone   String
  name  String
  receivables Receivable[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")
  @@map("assignors")
}
model Receivable {
  id    String    @id @default(uuid())
  value  Float
  emissionDate DateTime @map("emission_date")
  assignorId String @map("assignor_id")
  assignor Assignor @relation(fields: [assignorId], references: [id])
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")
  @@map("receivables")
}

model Batch{
  id   String    @id @default(uuid())
  totalJobs Int @map("total_jobs")
  sucessJobs Int @map("sucess_jobs") @default(0)
  failedJobs Int @map("failed_jobs") @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")
  batchesPayables BatchesPayable[]
  @@map("batches")
}

model BatchesPayable{
  id   String    @id @default(uuid())
  batchId String @map("batch_id")
  batch Batch @relation(fields: [batchId], references: [id])
  message String
  status String?
  attempts Int @default(0)
  statusMessage String? @map("status_message")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")
  @@map("outbox_batches_payables")
}


